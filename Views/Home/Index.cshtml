@model HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section" style="background: url('/images/coverphoto.jpeg') center center/cover no-repeat;height:auto;padding:18% 0%;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content text-center text-lg-start">
                    <h1 class="display-4 mb-4 fade-in">
                        Hello, I'm Jaemy Ho
                    </h1>
                    <h2 class="h3 mb-4 slide-up">Full-Stack Developer & Software Engineer</h2>
                    <p class="lead mb-4 slide-up">
                        Passionate about creating innovative web solutions and applications <br>
                        that make a difference. Specialized in ASP.NET MVC, React, and modern web technologies.
                    </p>
                    <div class="hero-buttons slide-up">
                        <a asp-controller="Portfolio" asp-action="Index" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-briefcase me-2"></i>View My Work
                        </a>
                        <a asp-controller="Contact" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="fas fa-envelope me-2"></i>Get In Touch
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section class="py-5 bg-light section-spacing about-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4 mb-4" style="width: 40%;">
                <div class="about-image text-center">
                    <img src="/images/formalphoto.jpg" alt="Jaemy Ho" class="img-fluid rounded-circle shadow-lg">
                </div>
            </div>
            <div class="col-lg-8">
                <h2 class="mb-4 fade-in">About Me</h2>
                <p class="lead mb-4 slide-up">
                    Hi, My name is Jaemy Ho, currently residing in Auckland, New Zealand and
                    I'm a dedicated software developer with expertise in full-stack web development. 
                    With a strong foundation in C#, ASP.NET MVC, and modern frontend technologies, 
                    I create robust, scalable applications that deliver exceptional user experiences.
                </p>
            </div>
        </div>
        <div class="row mt-5 feature-cards-container">
            <div class="col-lg-6 mb-4">
                <div class="feature-card card h-100 text-center p-4">
                    <div class="card-body">
                        <i class="fas fa-code fa-3x text-gradient mb-3"></i>
                        <h4 class="card-title">Clean Code</h4>
                        <p class="card-text">Writing maintainable, efficient, and well-documented code.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="feature-card card h-100 text-center p-4">
                    <div class="card-body">
                        <i class="fas fa-mobile-alt fa-3x text-gradient mb-3"></i>
                        <h4 class="card-title">Team Collaboration</h4>
                        <p class="card-text">Working effectively in agile teams and delivering quality solutions.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="feature-card card h-100 text-center p-4">
                    <div class="card-body">
                        <i class="fas fa-rocket fa-3x text-gradient mb-3"></i>
                        <h4 class="card-title">Performance</h4>
                        <p class="card-text">Optimizing applications for speed and scalability.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="feature-card card h-100 text-center p-4">
                    <div class="card-body">
                        <i class="fas fa-users fa-3x text-gradient mb-3"></i>
                        <h4 class="card-title">Responsive Design</h4>
                        <p class="card-text">Creating beautiful interfaces that work across all devices.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Projects Involved Section -->
<section class="py-5 bg-light section-spacing">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mx-auto text-center">
                <h2 class="mb-5 fade-in">Projects Involved</h2>
                <div class="row projects-container">
                    <div class="col-lg-6 mb-4">
                        <div class="project-card card h-100">
                            <img src="/images/btx.jpeg" class="card-img-top" alt="Stock Broking System">
                            <div class="card-body">
                                <h4 class="card-title">Stock Broking System</h4>
                                <p class="card-text">Provides users with complete stock trading lifecycle capabilities using C++.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mb-4">
                        <div class="project-card card h-100">
                            <img src="/images/JaemyWeb.JPG" class="card-img-top" alt="Jaemyho.com">
                            <div class="card-body">
                                <h4 class="card-title">Jaemyho.com</h4>
                                <p class="card-text">A portfolio website built with ASP.NET MVC and modern web technologies.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mb-4">
                        <div class="project-card card h-100">
                            <img src="/images/expensemate.png" class="card-img-top" alt="ExpenseMate">
                            <div class="card-body">
                                <h4 class="card-title">ExpenseMate</h4>
                                <p class="card-text">An expense tracking tool built using Python Flask and Tesseract OCR.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

