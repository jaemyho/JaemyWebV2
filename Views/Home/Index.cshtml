    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mb-5 fade-in">Technical Skills</h2>
                <div class="skills-container slide-up">
                    <div class="skill-category mb-4">
                        <h4 class="mb-3">Backend Development</h4>
                        <span class="skill-badge">C#</span>
                        <span class="skill-badge">ASP.NET MVC</span>
                        <span class="skill-badge">ASP.NET Core</span>
                        <span class="skill-badge">PHP</span>
                        <span class="skill-badge">Python</span>
                        <span class="skill-badge">SQL Server</span>
                        <span class="skill-badge">MySQL</span>
                    </div>
                    <div class="skill-category mb-4">
                        <h4 class="mb-3">Frontend Development</h4>
                        <span class="skill-badge">JavaScript</span>
                        <span class="skill-badge">jQuery</span>
                        <span class="skill-badge">Bootstrap</span>
                        <span class="skill-badge">CSS3</span>
                        <span class="skill-badge">HTML5</span>
                        <span class="skill-badge">React</span>
                    </div>
                    <div class="skill-category mb-4">
                        <h4 class="mb-3">Tools & Technologies</h4>
                        <span class="skill-badge">Git</span>
                        <span class="skill-badge">Visual Studio</span>
                        <span class="skill-badge">AWS</span>
                        <span class="skill-badge">REST APIs</span>
                        <span class="skill-badge">Postman</span>
                        <span class="skill-badge">Stored Procedures</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Portfolio Section -->
@if (Model.FeaturedPortfolioItems.Any())
{
    <section class="py-5 bg-light section-spacing">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="mb-5 fade-in">Featured Projects</h2>
                    <div class="row">
                        @foreach (var project in Model.FeaturedPortfolioItems)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="portfolio-card card h-100">
                                    <img src="@project.ImageUrl" class="card-img-top portfolio-image" alt="@project.Title">
                                    <div class="card-body">
                                        <h4 class="card-title">@project.Title</h4>
                                        <p class="card-text">@project.Description</p>
                                        @if (!string.IsNullOrEmpty(project.Technologies))
                                        {
                                            <p class="card-text"><small class="text-muted">@project.Technologies</small></p>
                                        }
                                    </div>
                                    <div class="card-footer bg-transparent border-0">
                                        <a asp-controller="Portfolio" asp-action="Details" asp-route-id="@project.Id" 
                                           class="btn btn-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="text-center mt-4">
                        <a asp-controller="Portfolio" asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-briefcase me-2"></i>View All Projects
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<!-- Latest Blog Section -->
@if (Model.LatestBlogPosts.Any())
{
    <section class="py-5 section-spacing">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="mb-5 fade-in">Latest Blog Posts</h2>
                    <div class="row">
                        @foreach (var post in Model.LatestBlogPosts)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h4 class="card-title">@post.Title</h4>
                                        @if (!string.IsNullOrEmpty(post.Description))
                                        {
                                            <p class="card-text">@post.Description</p>
                                        }
                                        <p class="card-text"><small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>@post.CreatedAt.ToString("MMM dd, yyyy")
                                            @if (!string.IsNullOrEmpty(post.Author))
                                            {
                                                <br><i class="fas fa-user me-1"></i>@post.Author
                                            }
                                        </small></p>
                                    </div>
                                    <div class="card-footer bg-transparent border-0">
                                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@post.Id" 
                                           class="btn btn-primary btn-sm">
                                            <i class="fas fa-read me-1"></i>Read More
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="text-center mt-4">
                        <a asp-controller="Blog" asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-blog me-2"></i>View All Posts
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<!-- Call to Action Section -->
<section class="py-5 bg-dark text-light section-spacing">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mb-4 fade-in">Let's Work Together</h2>
                <p class="lead mb-4 slide-up">
                    I'm always interested in new opportunities and exciting projects. 
                    Whether you have a question or just want to say hi, I'd love to hear from you!
                </p>
                <div class="hero-buttons slide-up">
                    <a asp-controller="Contact" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-envelope me-2"></i>Get In Touch
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.container {
    margin: 0px 5%;
}
</style>