@model ContactMessage
@{
    ViewData["Title"] = "Contact";
}

@section Scripts {
    <link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />
    <script src="~/js/contact.js" asp-append-version="true"></script>
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Header Section -->
            <div class="text-center mb-5 fade-in">
                <h1 class="display-4 mb-3"><span class="text-gradient">Get In Touch</span></h1>
                <p class="lead">I'd love to hear from you. Send me a message and I'll respond as soon as possible!</p>
            </div>

            <!-- Alert Messages -->
            <div id="alert-container"></div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                <!-- Contact Information -->
                <div class="col-lg-4 mb-5 slide-up">
                    <div class="contact-info">
                        <h3 class="mb-4">
                            <i class="fas fa-address-book me-2 text-gradient"></i>Contact Information
                        </h3>
                        
                        <div class="contact-item mb-4">
                            <div class="contact-icon">
                                <i class="fas fa-envelope text-gradient"></i>
                            </div>
                            <div class="contact-details">
                                <h5>Email</h5>
                                <p>contact@jaemyho.com</p>
                                <small class="text-muted">I'll respond within 24 hours</small>
                            </div>
                        </div>

                        <div class="contact-item mb-4">
                            <div class="contact-icon">
                                <i class="fas fa-phone text-gradient"></i>
                            </div>
                            <div class="contact-details">
                                <h5>Phone</h5>
                                <p>+1 (555) 123-4567</p>
                                <small class="text-muted">Available Mon-Fri, 9AM-6PM PST</small>
                            </div>
                        </div>

                        <div class="contact-item mb-4">
                            <div class="contact-icon">
                                <i class="fas fa-map-marker-alt text-gradient"></i>
                            </div>
                            <div class="contact-details">
                                <h5>Location</h5>
                                <p>San Francisco, CA</p>
                                <small class="text-muted">Open to remote work worldwide</small>
                            </div>
                        </div>

                        <div class="contact-item mb-4">
                            <div class="contact-icon">
                                <i class="fas fa-clock text-gradient"></i>
                            </div>
                            <div class="contact-details">
                                <h5>Response Time</h5>
                                <p>Usually within 24 hours</p>
                                <small class="text-muted">Faster for urgent inquiries</small>
                            </div>
                        </div>

                        <!-- Social Links -->
                        <div class="social-links mt-4">
                            <h5 class="mb-3">Follow Me</h5>
                            <div class="d-flex gap-3">
                                <a href="#" class="social-link" title="LinkedIn">
                                    <i class="fab fa-linkedin fa-lg"></i>
                                </a>
                                <a href="#" class="social-link" title="GitHub">
                                    <i class="fab fa-github fa-lg"></i>
                                </a>
                                <a href="#" class="social-link" title="Twitter">
                                    <i class="fab fa-twitter fa-lg"></i>
                                </a>
                                <a href="#" class="social-link" title="Instagram">
                                    <i class="fab fa-instagram fa-lg"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="col-lg-8">
                    <div class="contact-form card slide-up">
                        <div class="card-body p-4">
                            <h3 class="mb-4">
                                <i class="fas fa-envelope me-2 text-gradient"></i>Send Me a Message
                            </h3>
                            
                            <form asp-controller="Contact" asp-action="Index" method="post" id="contactForm" novalidate>
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Name" class="form-label">
                                            <i class="fas fa-user me-1"></i>Full Name *
                                        </label>
                                        <input asp-for="Name" class="form-control" placeholder="Your full name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Email" class="form-label">
                                            <i class="fas fa-envelope me-1"></i>Email Address *
                                        </label>
                                        <input asp-for="Email" class="form-control" placeholder="your.email@example.com" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Subject" class="form-label">
                                        <i class="fas fa-tag me-1"></i>Subject
                                    </label>
                                    <input asp-for="Subject" class="form-control" placeholder="What's this about?" />
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Message" class="form-label">
                                        <i class="fas fa-comment me-1"></i>Message *
                                    </label>
                                    <textarea asp-for="Message" class="form-control" rows="6" 
                                              placeholder="Tell me about your project or question..." style="resize: vertical;"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>

                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <button type="reset" class="btn btn-outline-secondary me-md-2">
                                        <i class="fas fa-undo me-1"></i>Reset
                                    </button>
                                    <button type="submit" class="btn btn-primary" id="submit-btn">
                                        <i class="fas fa-paper-plane me-1"></i>Send Message
                                    </button>
                               ?</div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Information -->
            <div class="row mt-5">
                <div class="col-lg-8 mx-auto">
                    <div class="card bg-light slide-up">
                        <div class="card-body text-center py-4">
                            <h4 class="mb-3">I'm Available For</h4>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <div class="service-item">
                                        <i class="fas fa-code fa-2x text-gradient mb-2"></i>
                                        <h6>Full-Stack Development</h6>
                                        <p class="text-muted small">Custom web applications</p>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="service-item">
                                        <i class="fas fa-mobile-alt fa-2x text-gradient mb-2"></i>
                                        <h6>Mobile Development</h6>
                                        <p class="text-muted small">iOS & Android apps</p>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="service-item">
                                        <i class="fas fa-cog fa-2x text-gradient mb-2"></i>
                                        <h6>Consulting</h6>
                                        <p class="text-muted small">Technical consulting</p>
                                    </div>
                                </div>
                            </div>
                            <p class="mt-3 mb-0">
                                <strong>Response Time:</strong> Usually within 24 hours | 
                                <strong>Availability:</strong> Remote work worldwide
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>