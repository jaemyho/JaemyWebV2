@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

@section Scripts {
    <link rel="stylesheet" href="~/css/error.css" asp-append-version="true" />
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center fade-in">
            <div class="error-content">
                <div class="error-icon mb-4">
                    <i class="fas fa-exclamation-triangle fa-4x text-warning"></i>
                </div>
                
                <h1 class="display-4 mb-4">
                    <span class="text-gradient">Oops! Something went wrong</span>
                </h1>
                
                <p class="lead mb-4">
                    We're sorry, but an unexpected error occurred. Please try again or contact us if the problem persists.
                </p>

                @if (Model?.ShowRequestId == true)
                {
                    <div class="alert alert-info mb-4">
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </div>
                }

                <div class="error-actions mb-5">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-home me-2"></i>Go Home
                    </a>
                    <a asp-controller="Contact" asp-action="Index" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-envelope me-2"></i>Contact Us
                    </a>
                </div>

                <!-- Helpful Links -->
                <div class="card bg-light">
                    <div class="card-body">
                        <h4 class="mb-3">You might be looking for:</h4>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                                    <i class="fas fa-home text-gradient"></i>
                                    <span class="d-block mt-2">Home Page</span>
                                </a>
                            </div>
                            <div class="col-md-4 mb-3">
                                <a asp-controller="Portfolio" asp-action="Index" class="text-decoration-none">
                                    <i class="fas fa-briefcase text-gradient"></i>
                                    <span class="d-block mt-2">Portfolio</span>
                                </a>
                            </div>
                            <div class="col-md-4 mb-3">
                                <a asp-controller="Contact" asp-action="Index" class="text-decoration-none">
                                    <i class="fas fa-envelope text-gradient"></i>
                                    <span class="d-block mt-2">Contact</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

