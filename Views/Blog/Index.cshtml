@model IEnumerable<BlogPost>
@{
    ViewData["Title"] = "Blog";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Header Section -->
            <div class="text-center mb-5 fade-in">
                <h1 class="display-4 mb-3"><span class="text-gradient">My Blog</span></h1>
                <p class="lead">Thoughts on software development, technology trends, and personal insights</p>
            </div>

            @if (Model.Any())
            {
                <!-- Blog Posts Grid -->
                <div class="row">
                    @foreach (var post in Model)
                    {
                        <div class="col-lg-6 mb-4">
                            <div class="blog-card card h-100 slide-up">
                                @if (!string.IsNullOrEmpty(post.ImageUrl))
                                {
                                    <img src="@post.ImageUrl" class="card-img-top blog-image" alt="@post.Title" />
                                }
                                <div class="card-body">
                                    <div class="blog-meta mb-3">
                                        <span class="badge bg-primary me-2">
                                            <i class="fas fa-calendar me-1"></i>@post.CreatedAt.ToString("MMM dd, yyyy")
                                        </span>
                                        @if (!string.IsNullOrEmpty(post.Author))
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-user me-1"></i>@post.Author
                                            </span>
                                        }
                                    </div>
                                    
                                    <h3 class="card-title">
                                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@post.Id" class="text-decoration-none">
                                            @post.Title
                                        </a>
                                    </h3>
                                    
                                    @if (!string.IsNullOrEmpty(post.Description))
                                    {
                                        <p class="card-text">@post.Description</p>
                                    }
                                    else
                                    {
                                        <p class="card-text">@(post.Content.Length > 150 ? post.Content.Substring(0, 150) + "..." : post.Content)</p>
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(post.Tags))
                                    {
                                        <div class="blog-tags mb-3">
                                            @foreach (var tag in post.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                            {
                                                <span class="badge bg-light text-dark me-1 mb-1">#@tag.Trim()</span>
                                            }
                                        </div>
                                    }
                                </div>
                                <div class="card-footer bg-transparent border-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@post.Id" 
                                           class="btn btn-primary btn-sm">
                                            <i class="fas fa-read me-1"></i>Read More
                                        </a>
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            @Math.Max(1, (int)(DateTime.Now - post.CreatedAt).TotalDays) days ago
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination (Placeholder) -->
                <div class="text-center mt-5 fade-in">
                    <nav aria-label="Blog pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                            </li>
                            <li class="page-item active" aria-current="page">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
            else
            {
                <!-- No Posts Section -->
                <div class="text-center py-5 fade-in">
                    <div class="card">
                        <div class="card-body">
                            <i class="fas fa-blog fa-3x text-muted mb-3"></i>
                            <h3 class="text-muted">No Blog Posts Yet</h3>
                            <p class="text-muted">Blog posts will appear here once they are published.</p>
                            <a asp-controller="Contact" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-envelope me-2"></i>Contact Me
                            </a>
                        </div>
                    </div>
                </div>
            }

            <!-- Newsletter Subscription -->
            <div class="row mt-5">
                <div class="col-lg-8 mx-auto">
                    <div class="card bg-gradient-primary text-white slide-up">
                        <div class="card-body text-center py-4">
                            <h3 class="mb-3">Stay Updated</h3>
                            <p class="mb-4">
                                Subscribe to my newsletter to get notified about new blog posts and updates.
                            </p>
                            <div class="row justify-content-center">
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <input type="email" class="form-control" placeholder="Enter your email address">
                                        <button class="btn btn-light" type="button">
                                            <i class="fas fa-paper-plane me-1"></i>Subscribe
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <p class="small mt-3 mb-0">No spam, unsubscribe at any time.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Categories/Search Section -->
            <div class="row mt-5">
                <div class="col-lg-8 mx-auto">
                    <div class="card bg-light slide-up">
                        <div class="card-body">
                            <h4 class="mb-4 text-center">
                                <i class="fas fa-search me-2 text-gradient"></i>Explore Topics
                            </h4>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <h6 class="text-gradient">Categories</h6>
                                    <div class="categories">
                                        <a href="#" class="category-link">Web Development</a>
                                        <a href="#" class="category-link">ASP.NET MVC</a>
                                        <a href="#" class="category-link">JavaScript</a>
                                        <a href="#" class="category-link">Cloud Computing</a>
                                        <a href="#" class="category-link">Tips & Tricks</a>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <h6 class="text-gradient">Popular Tags</h6>
                                    <div class="tags">
                                        <span class="badge bg-secondary me-1 mb-1">#development</span>
                                        <span class="badge bg-secondary me-1 mb-1">#technology</span>
                                        <span class="badge bg-secondary me-1 mb-1">#programming</span>
                                        <span class="badge bg-secondary me-1 mb-1">#web</span>
                                        <span class="badge bg-secondary me-1 mb-1">#coding</span>
                                        <span class="badge bg-secondary me-1 mb-1">#tech</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>